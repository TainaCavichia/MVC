@model Estacionamento.MVC.ViewModel.RegistroViewModel

@{
        Html.RenderPartial("_HeaderNavBar");
    }
    
<h2>Listagem</h2>

<section class="listagem">

@foreach (var item in Model.Registros)
{   
<br>
<p>------------------------------------------------------------------</p>
<p>Nome do Motorista: @item.Nome</p>
